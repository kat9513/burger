<h1>EAT DA BURGER!</h1>

<h2>Burgers that are ready to be eaten!</h2>

<ul>
  {{#each burgers}}
    {{#unless this.devoured}}
<li>
    {{this.burger_name}}
    <form action="/api/burgers/{{this.id}}?_method=PUT" method="PUT">
    <input type='hidden' name='devoured' value='1'>
    <button class="change-sleep" type='submit'>EAT DA BURGER!</button>
    </form>
    {{>burgers/delete-burger}}
</li> 
   {{/unless}}
  {{/each}}
</ul>

<h2>Burgers that have been devoured!</h2>

<ul>
  {{#each burgers}}
    {{#if devoured}}
    {{/if}}
  {{/each}}
</ul>

<h2>Add a Burger</h2>
<form class="create-form">

  <div class="form-group">
    <label for="ca">Burger Name:</label>
    <input type="text" id="ca" name="name">
  </div>

  <div class="form-group">
    <label for="devoured">Devoured?</label><br>
    <input type="radio" name="devoured" value="1" checked> Devoured!<br>
    <input type="radio" name="devoured" value="0"> Ready to eat!
  </div>

  <button type="submit">Add Burger</button>
</form>

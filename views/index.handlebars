<div class="container text-center center-block">
  <h1 class="title">
    Eat the Burger!
  </h1>

  <img class="burgerImg" src="/burger.png">

  <div class="row col-sm-12 burgers">

    <div class="eaten col-sm-6">
      <h2>
        Burgers that are ready to be eaten:
      </h2>
      <ul>
        {{#each burgers}}
        {{#unless devoured}}
        {{> burgers/burger-block devoured=1}}
        {{/unless}}
        {{/each}}
      </ul>
    </div>

    <div class="ready col-sm-6">
      <h2>
        Burgers that have been devoured:
      </h2>

      <ul>
        {{#each burgers}}
        {{#if devoured}}
        {{> burgers/burger-block devoured=0}}
        {{/if}}
        {{/each}}
      </ul>
    </div>
  </div>


  <div class="addBurger">
    <h2>Add a Burger</h2>
    <form class="create-form">

      <div class="form-group">
        <label for="ca">Burger Name:</label>
        <input type="text" id="ca" name="name">
      </div>

      <div class="form-group">
        <label for="devoured">Devoured?</label><br>
        <input type="radio" name="devoured" value="1"> Devoured!<br>
        <input type="radio" name="devoured" value="0"> Ready to eat!
      </div>

      <button type="submit">Add Burger</button>
    </form>
  </div>
</div>